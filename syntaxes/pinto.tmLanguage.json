{
    "scopeName": "source.pinto",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.pinto",
                    "begin": "//",
                    "end": "\\n"
                },
                {
                    "name": "comment.block.pinto",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "match": "(import)\\s+(@?[A-Za-z_$][A-Za-z0-9_$/]*)",
                    "captures": {
                        "1": {
                            "name": "keyword.other.import.pinto"
                        },
                        "2": {
                            "name": "entity.name.section"
                        }
                    }
                },
                {
                    "include": "#type"
                }
            ]
        },
        "type": {
            "patterns": [
                {
                    "match": "(type)\\s+([A-Za-z$_][A-Za-z0-9$_]*)\\s*(?:\\(\\s*([A-Za-z$_][A-Za-z0-9$_]*)\\s*(?:,\\s*([A-Za-z$_][A-Za-z0-9$_]*)\\s*)?\\))?",
                    "captures": {
                        "1": {
                            "name": "keyword.declaration.pinto"
                        },
                        "2": {
                            "name": "entity.name.type.pinto"
                        },
                        "3": {
                            "name": "entity.name.type.pinto"
                        },
                        "4": {
                            "name": "entity.name.type.pinto"
                        }
                    }
                },
                {
                    "match": "type",
                    "name": "keyword.declaration.pinto"
                },
                {
                    "include": "#type-variant"
                }
            ]
        },
        "type-variant": {
            "match": "([A-Za-z$_][A-Za-z0-9$_]*)\\s*(?:\\(\\s*([A-Za-z$_][A-Za-z0-9$_]*)\\s+([A-Za-z$_][A-Za-z0-9$_]*)\\s*(?:,\\s*([A-Za-z$_][A-Za-z0-9$_]*)\\s+([A-Za-z$_][A-Za-z0-9$_]*)\\s*)?\\))?",
            "captures": {
                "1": {
                    "name": "entity.name.type.pinto"
                },
                "2": {
                    "name": "entity.name.type.pinto"
                },
                "3": {
                    "name": "variable.parameter.pinto"
                },
                "4": {
                    "name": "entity.name.type.pinto"
                },
                "5": {
                    "name": "variable.parameter.pinto"
                }
            }
        },
        "identifier": {
            "match": "\\b[A-Za-z$_][A-Za-z0-9$_]*\\b"
        }
    }
}